<!DOCTYPE html>
<html lang="en">

<head>
    <title>TinyApp</title>
</head>

<body>
    <!-- Add your EJS code here -->


    <main>
        <%- include partials/_header.ejs %>
            <ul>
                <% for (var shortURL in urls) { %>
                    <li>
                        <%= shortURL %> ---->
                            <a href='<%= urls[shortURL] %>'>
                                <%= urls[shortURL].url %>
                            </a>
                            <a href='/urls/<%= shortURL %>/edit'>
                                Edit
                            </a>
                            <form method="POST" action="/urls/<%= shortURL %>/delete">
                                <button type="submit" value="<%= shortURL %>">Delete</button>
                            </form>

                    </li>
                    <% }; %>
            </ul>
    </main>

</body>

</html>

